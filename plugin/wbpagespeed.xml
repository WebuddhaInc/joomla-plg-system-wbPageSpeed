<extension version="3.1" type="plugin" group="system" method="upgrade">
  <name>plg_system_wbpagespeed</name>
  <author>David Hunt (webuddha.com)</author>
  <creationDate>March 2015</creationDate>
  <copyright>(c)2015 Webuddha.com, The Holodyn Corporation. All rights reserved.</copyright>
  <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
  <authorEmail>webmaster@webuddha.com</authorEmail>
  <authorUrl>www.webuddha.com</authorUrl>
  <version>3.1.1</version>
  <description>plg_system_wbpagespeed_description</description>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="compress_css" type="radio" default="0" label="Compress CSS" description="">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
        <field name="compress_js" type="radio" default="0" label="Compress JS" description="">
          <option value="0">No</option>
          <option value="1">Yes</option>
        </field>
      </fieldset>
    </fields>
  </config>
  <files>
    <filename plugin="wbpagespeed">wbpagespeed.php</filename>
    <folder>language</folder>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_system_wbpagespeed.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_system_wbpagespeed.sys.ini</language>
  </languages>
</extension>
